# Stripe Configuration
# Get these from your Stripe Dashboard (https://dashboard.stripe.com/apikeys)
STRIPE_PUBLISHABLE_KEY=pk_test_or_pk_live_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_or_sk_live_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Cloudflare R2 (S3-compatible) Configuration
# Get these from your Cloudflare Dashboard > R2 > Manage R2 API tokens
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=your_bucket_name
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your_public_url_or_custom_domain

# Application Configuration
SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: Import directory for local development
IMPORT_IMAGES_DIR=./etsy_images

# Optional: Email configuration for order notifications
EMAIL_FROM=orders@yourdomain.com
EMAIL_SMTP_HOST=smtp.yourdomain.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your_email_user
EMAIL_SMTP_PASSWORD=your_email_password